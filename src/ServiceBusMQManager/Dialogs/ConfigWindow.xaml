<Window xmlns:Controls="clr-namespace:ServiceBusMQManager.Controls" x:Name="frmConfig"  x:Class="ServiceBusMQManager.Dialogs.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfigWindow" Height="918.5" Width="700" WindowStartupLocation="CenterScreen"
        MinWidth="600"
        WindowStyle="None" 
        ResizeMode="NoResize"
        MouseDown="Grid_MouseLeftButtonDown" MouseMove="Window_MouseMove"  Icon="../Images/main32ico.png" Closing="frmConfig_Closing" SourceInitialized="frmConfig_SourceInitialized"
        >

    <Window.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="15" />
        </Style>

    </Window.Resources>
    <Border BorderBrush="#1581D2"            
            BorderThickness="1,1,1,1"
            CornerRadius="0"
            Background="Transparent">

        <Grid Background="#333333">



            <Rectangle
                    Height="28"
                    VerticalAlignment="Top"
                    Fill="Transparent"
/>
            <Label Name="lbTitle" Margin="10,0,0,0" Foreground="White" FontFamily="Segoe UI Light" FontSize="24"  >
                   Configuration
            </Label>
            <Button
                HorizontalAlignment="Right"
                Margin="0,6,8,0"
                VerticalAlignment="Top"
                Style="{StaticResource ChromeButtonStyle}"
                Click="HandleCloseClick">
                <TextBlock
                    TextWrapping="Wrap"
                    Text="r"
                    FontFamily="Webdings"
                    Foreground="DarkGray"
                    FontSize="13.333" />
            </Button>

            <Button
                HorizontalAlignment="Right"
                Margin="0,6,28,0"
                VerticalAlignment="Top"
                Style="{StaticResource ChromeButtonStyle}"
                Click="HandleMaximizeClick">
                <TextBlock
                    TextWrapping="Wrap"
                    Text="1"
                    FontFamily="Webdings"
                    Foreground="DarkGray"
                    FontSize="13.333" />
            </Button>


            <ScrollViewer Margin="0,54,5,70" VerticalScrollBarVisibility="Auto">

                <Grid Background="#575757" RenderTransformOrigin="0.5,0.5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0"/>
                        <RowDefinition Height="161"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="89"/>
                        <RowDefinition Height="94"/>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="69"/>
                        <RowDefinition Height="210"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="332*" />
                        <ColumnDefinition Width="361*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Fill="#333333" Grid.Row="2" Margin="0,0,0,0" Stroke="Transparent" Grid.ColumnSpan="2"  />
                    <Rectangle Fill="#333333" Grid.Row="5" Margin="0,0,0,0" Stroke="Transparent" Grid.ColumnSpan="2"  />

                    <Label Content="Service Bus" HorizontalAlignment="Left" Margin="25,3,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.389,-0.235" Grid.Row="1" Height="28" Width="79"/>
                    <ComboBox x:Name="cbServiceBus" HorizontalAlignment="Left" Margin="24,31,0,0" Style="{DynamicResource ComboBoxStyle1}" VerticalAlignment="Top" Width="139" FontFamily="Calibri" FontSize="16" Grid.Row="1" Height="28"/>
                    <Label Content="Transportation " HorizontalAlignment="Left" Margin="182,3,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.389,-0.235" Grid.Row="1" Height="28" Width="107"/>
                    <ComboBox x:Name="cbTransport" HorizontalAlignment="Left" Style="{DynamicResource ComboBoxStyle1}" Margin="182,31,0,0" Grid.ColumnSpan="2" VerticalAlignment="Top" Width="132" FontFamily="Calibri" FontSize="16" Grid.Row="1" Height="28"/>
                    <Label Content="Server" HorizontalAlignment="Left" Margin="334,4,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.389,-0.235" Grid.Row="1" Height="28" Width="53" Grid.Column="0" Grid.ColumnSpan="2"/>
                    <Controls:TextInputControl x:Name="tbServer" Margin="3,31,0,0" LostFocus="tbServer_LostFocus_1" VerticalAlignment="Top" Grid.Row="1" Height="30" Grid.Column="1" HorizontalAlignment="Left" Width="271" />
                    <Label Content="Refresh Intervall" HorizontalAlignment="Left" Margin="25,70,0,0" VerticalAlignment="Top" Grid.Row="1" Height="28" Width="113"/>
                    <Controls:TextInputControl x:Name="tbInterval" HorizontalAlignment="Left" Margin="25,98,0,0" VerticalAlignment="Top" Width="113" Grid.Row="1" Height="30"/>
                   
                    
                    <CheckBox Name="cShowOnNewMessages" Content="Popup when new messages arrive" 
                              HorizontalAlignment="Left" Margin="34,84,0,0" 
                              VerticalAlignment="Top" 
                              FontFamily="Calibri" FontSize="14" Width="274" Grid.Row="1" Height="22" Foreground="White" Background="#FF555555" BorderBrush="White" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
                        <CheckBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1.22" ScaleY="1.22"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </CheckBox.RenderTransform>
                    </CheckBox>

                    <Label Content="Queues" HorizontalAlignment="Left" Margin="20,14,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Light" FontSize="24" Grid.Row="2" Height="42" Width="87"/>
                    <Label Content="Send Command" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Light" FontSize="24" Grid.Row="5" Height="42" Width="173"/>
                    <Label Content="Command definition" HorizontalAlignment="Left" Margin="53,10,0,0" VerticalAlignment="Top" Width="218" FontSize="20" Grid.Row="7" Height="35" FontFamily="Segoe UI"/>
                    <TextBox x:Name="tbCmdInherits" Foreground="Black"  HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" BorderBrush="Gray" Height="27" Margin="75,84,0,0" TextWrapping="Wrap" Width="349" Grid.Row="7" IsEnabled="False" FontSize="16" Grid.ColumnSpan="2"/>
       

                    <Button x:Name="btnSelectType" HorizontalAlignment="Left" Margin="430,76,0,0" VerticalAlignment="Top" Width="42" Grid.Row="7" Height="42" Click="Button_Click_1" Grid.Column="0" Grid.ColumnSpan="2">
                        <Button.Template>
                            <ControlTemplate>
                                <Image Name="img" HorizontalAlignment="Left"  Source="/ServiceBusMQManager;component/Images/search-item-white.png" Margin="0,-1,0,1" />

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Source" Value="/ServiceBusMQManager;component/Images/search-item-white.png" TargetName="img" />
                                        <Setter Property="Cursor" Value="Hand" />
                                    </Trigger>
                                    <Trigger Property="Button.IsPressed" Value="True">
                                        <Setter Property="Source" Value="/ServiceBusMQManager;component/Images/search-item-gray.png" TargetName="img" />
                                    </Trigger>
                                </ControlTemplate.Triggers>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                    <Label Content="Inherits:" HorizontalAlignment="Left" Margin="77,60,0,0" VerticalAlignment="Top" Grid.Row="7" Height="28" Width="61" FontSize="16"/>

                    <Controls:TextInputControl x:Name="tbNamespace" HorizontalAlignment="Left" Height="27" Margin="77,157,0,0" VerticalAlignment="Top" Width="347" Grid.Row="7" FontFamily="Calibri" FontSize="16" Grid.ColumnSpan="2" />
                    <Label Content="Namespace contains" HorizontalAlignment="Left" Margin="74,131,0,0" VerticalAlignment="Top" Grid.Row="7" Height="28" Width="157" FontSize="16"/>

                    <Controls:StringListControl Grid.Row="3" x:Name="queueCommands"  Title="Command queues"  VerticalAlignment="Top" Margin="20,0,18,0"  AddItem="StringListControl_AddItem_1" SizeChanged="StringListControl_SizeChanged" Height="80" />
                    <Controls:StringListControl Grid.Row="3" x:Name="queueEvents" Title="Event queues" VerticalAlignment="Top" Margin="16,0,20,0"  AddItem="StringListControl_AddItem_1" SizeChanged="StringListControl_SizeChanged" Height="80" Grid.Column="1"/>


                    <Controls:StringListControl x:Name="asmPaths" Title="Assembly paths" Margin="20,0,20,0" VerticalAlignment="Top" Grid.Row="6" Height="50" SizeChanged="asmPaths_SizeChanged" AddItem="asmPaths_AddItem" Grid.ColumnSpan="2"/>
                    <Controls:StringListControl Grid.Row="4" x:Name="queueMessages"  Title="Messages queues"  VerticalAlignment="Top" Margin="20,10,18,0"  AddItem="StringListControl_AddItem_1" SizeChanged="StringListControl_SizeChanged" Height="80" />
                    <Controls:StringListControl Grid.Row="4" x:Name="queueErrors" Title="Error queues" VerticalAlignment="Top" Margin="16,10,20,0"  AddItem="StringListControl_AddItem_1" SizeChanged="StringListControl_SizeChanged" Height="80" Grid.Column="1"/>
                    <Label Content="or" HorizontalAlignment="Left" Margin="32,101,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Light" FontSize="24" Grid.Row="7" Height="42" Width="37"/>
                    <Label Content="ms" HorizontalAlignment="Left" Margin="143,98,0,0" VerticalAlignment="Top" Grid.Row="1" Height="28" Width="40" FontSize="18"/>
                    <CheckBox x:Name="cCheckForNewVer" Content="Check for new versions" 
                    	HorizontalAlignment="Left" Margin="34,114,0,0" 
                    	VerticalAlignment="Top" 
                    	FontFamily="Calibri" FontSize="14" Width="274" Grid.Row="1" Height="22" Foreground="White" Background="#FF555555" BorderBrush="White" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
                        <CheckBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1.22" ScaleY="1.22"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </CheckBox.RenderTransform>
                    </CheckBox>



                </Grid>
            </ScrollViewer>

            <Button x:Name="btnCancel" HorizontalAlignment="Left" Margin="20,0,0,17" VerticalAlignment="Bottom" Width="109" Height="29" IsCancel="True" FontFamily="Segoe UI">
                <Button.Template>
                    <ControlTemplate>
                        <Border x:Name="btnBorder" BorderBrush="#de6a5b" BorderThickness="0,0,0,0" Background="#007BFF" >
                                <TextBlock x:Name="btnText" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="14" Padding="0,0,0,0" >CANCEL</TextBlock>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D9BFF" TargetName="btnBorder" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                            <Trigger Property="ButtonBase.IsPressed" Value="True">
                                <Setter Property="Background" Value="#54A3F7" TargetName="btnBorder" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Button.Template>
            </Button>


            <Button x:Name="btnOK" Margin="0,0,20,17" VerticalAlignment="Bottom" Height="29" FontFamily="Segoe UI" IsDefault="True" Click="btnOK_Click" HorizontalAlignment="Right" Width="110">
                <Button.Template>
                    <ControlTemplate>
                        <Border x:Name="btnBorder" BorderBrush="#de6a5b" BorderThickness="0,0,0,0" Background="#007BFF" >
                            <TextBlock x:Name="btnText" VerticalAlignment="Center" Foreground="White" FontSize="14" Padding="0,0,0,0" HorizontalAlignment="Center">SAVE</TextBlock>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D9BFF" TargetName="btnBorder" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                            <Trigger Property="ButtonBase.IsPressed" Value="True">
                                <Setter Property="Background" Value="#54A3F7" TargetName="btnBorder" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>
    </Border>

</Window>

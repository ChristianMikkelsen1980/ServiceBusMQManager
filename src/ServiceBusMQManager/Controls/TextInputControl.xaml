<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceBusMQManager.Controls" x:Class="ServiceBusMQManager.Controls.TextInputControl" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">

    <Grid x:Name="theGrid">

        <TextBox x:Name="tb" BorderBrush="Gray" Padding="4,0,0,0"
                 FontFamily="Calibri" FontSize="16"  
                 BorderThickness="1.01" Margin="0,0,0,0" 
                 VerticalContentAlignment="Center" 
                 PreviewKeyDown="tb_PreviewKeyDown_1" 
                 TextChanged="tb_TextChanged" 
                 PreviewTextInput="tb_PreviewTextInput" 
                 LostFocus="tb_LostFocus" 
                 GotFocus="tb_GotFocus" 
                 PreviewMouseLeftButtonDown="tb_PreviewMouseLeftButtonDown" 
                 GotKeyboardFocus="tb_GotKeyboardFocus" 
                 MouseEnter="tb_MouseEnter" MouseLeave="tb_MouseLeave"/>
    </Grid>
</UserControl>

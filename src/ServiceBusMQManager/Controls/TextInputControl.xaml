<UserControl x:Class="ServiceBusMQManager.Controls.TextInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    
    <Grid Name="theGrid">


        <TextBox Name="tb" BorderBrush="Gray" 
                 FontFamily="Calibri" FontSize="16"  
                 BorderThickness="1.01" Margin="0,0,0,0" 
                 VerticalContentAlignment="Center" 
                 PreviewKeyDown="tb_PreviewKeyDown_1" 
                 TextChanged="tb_TextChanged" 
                 PreviewTextInput="tb_PreviewTextInput" 
                 LostFocus="tb_LostFocus" 
                 GotFocus="tb_GotFocus" 
                 PreviewMouseLeftButtonDown="tb_PreviewMouseLeftButtonDown" 
                 GotKeyboardFocus="tb_GotKeyboardFocus" 
                 MouseEnter="tb_MouseEnter" MouseLeave="tb_MouseLeave">


        </TextBox>
    </Grid>
</UserControl>
